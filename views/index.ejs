<!DOCTYPE html>
<html>
<head>
    <title>Form Page</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <h1 class="text-yellow-400 text-5xl font-bold px-2 py-2">my NOTES</h1>
        <div class="form px-10 py-10 text-white">
            <form action="/create" method="post">
                <input
                    class="bg-zinc-800 w-full block px-5 py-2 mb-3 rounded-lg outline-none"
                    type="text"
                    placeholder="Note title"
                    name="title" />
                <textarea
                    class="bg-zinc-800 w-full block px-5 py-2 resize-none rounded-lg outline-none"
                    placeholder="Let's get started..."
                    name="details"></textarea>
                <button class="bg-yellow-700 rounded-lg mt-5 px-4 py-2 w-fit text-white">
                    Submit
                </button>
            </form>
        </div>

        <div class="task p-10 flex flex-wrap gap-4">
            <% if(files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task bg-zinc-800 rounded-md w-72 px-3 py-4 text-white">
                        <h1 class="text-3xl tracking-tighter font-semibold"><%= val %></h1>
                        <a class="text-blue-500" href="/file/<%= val %>">Read more...</a>
                        <a href="/edit/<%= val %>" class="text-yellow-400 px-5">Edit...</a>
                    </div>
                <% }); %>
            <% } else { %>
                <h3 class="text-4xl text-yellow-400 font-bold">No Tasks Yet <span class="text-yellow-400 text-4xl">:(</span></h3>
            <% } %>
        </div>
    </div>
</body>
</html>
